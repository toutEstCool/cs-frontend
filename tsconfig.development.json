{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"]
}
